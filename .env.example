# ====================================
# Lenjoy Manager 环境变量配置示例
# ====================================
# 复制此文件为 .env 并修改相应的值

# ====================================
# 数据库配置
# ====================================
DATABASE_NAME=lenjoy
DATABASE_USER=lenjoy
DATABASE_PASSWORD=lenjoy123
DATABASE_ROOT_PASSWORD=root123

# ====================================
# Django 配置
# ====================================
# 生产环境请设置为 False
DEBUG=False

# Django Secret Key（生产环境请使用随机生成的密钥）
# 可以使用以下命令生成: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-change-in-production-please-use-random-string

# 允许的主机（生产环境请设置为具体域名，多个域名用逗号分隔）
ALLOWED_HOSTS=*

# CORS 配置
CORS_ALLOW_ALL_ORIGINS=True

# ====================================
# 前端配置
# ====================================
# 容器内部 API 地址（前端 SSR 时使用）
NEXT_PUBLIC_API_URL=http://api:8000

# 浏览器访问的 API 地址（前端 CSR 时使用）
# 开发环境: http://localhost/api
# 生产环境: https://your-domain.com/api
NEXT_PUBLIC_CLIENT_API_URL=http://localhost/api

# ====================================
# Nginx 端口配置
# ====================================
HTTP_PORT=80
HTTPS_PORT=443
